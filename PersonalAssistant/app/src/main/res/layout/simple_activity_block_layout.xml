<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/block_panel"
    android:padding="@dimen/blockPadding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/blockImage"
            android:layout_width="@dimen/blockImageSize"
            android:layout_height="@dimen/blockImageSize"
            android:src="@drawable/ic_reminder"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:background="@drawable/block_image_background_activities"
            android:contentDescription="@string/block_icon_content_description" />

        <TextView
            android:id="@+id/blockTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Activities"
            android:fontFamily="@font/ptsans_regular"
            android:textSize="@dimen/blockTitleTextSize"
            android:textColor="@color/activitiesColor"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/blockMainTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Don't forget about your morning exercises."
        android:fontFamily="@font/ptsans_regular"
        android:textSize="@dimen/blockTitleTextSize"
        android:textColor="@color/fontBlackColor"/>

</LinearLayout>