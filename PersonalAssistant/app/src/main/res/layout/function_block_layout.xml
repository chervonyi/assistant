<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/blockPadding"
    android:background="@drawable/block_panel"
    android:gravity="center">

    <ImageView
        android:id="@+id/functionBlockImage"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_book_black"
        android:alpha="0.1"/>

    <TextView
        android:id="@+id/functionBlockMainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
        android:textAlignment="center"
        android:fontFamily="@font/ptsans_regular"
        android:textColor="@color/fontBlackColor"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/functionBlockSubText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Lorem Ipsum"
        android:textAlignment="center"
        android:fontFamily="@font/ptsans_regular"
        android:textColor="@color/fontBlackColor"
        android:textSize="18sp"/>

</LinearLayout>